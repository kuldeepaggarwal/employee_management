<%= form_for @employee, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, placeholder: 'Enter Employee Name' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :age, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :age, min: 0 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email_id, class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email_id, placeholder: 'Enter EmailID of Employee' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, placeholder: 'Enter Location' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :department, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :department, placeholder: 'Enter Department' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :designation, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :designation, placeholder: 'Enter Designation' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn btn-success' %>
      <%= link_to 'Back', :employees, class: 'btn btn-inverse' %>
    </div>
  </div>
<% end %>
